<% layout("includes/boilerplate") -%>

<!-- Hero Section -->
    <header class="package-hero">
        <div class="container hero-content">
            <h1 class="display-3 fw-bold"> <%= package.title %></h1>
            <p class="lead text-light"> <%= package.duration %> | <%= package.place %>, <%= package.country %></p>
        </div>
    </header> 

    <div class="container mb-5">
        <!-- Overview Stats -->
        <div class="overview-box mb-5">
            <div class="row align-items-center">
                <div class="col-md-3 icon-box border-end">
                    <h5 class="fw-bold">Duration</h5>
                    <p class="text-muted mb-0"><%= package.duration %></p>
                </div>
                <div class="col-md-3 icon-box border-end">
                    <h5 class="fw-bold">Couple Price</h5>
                    <p class="text-muted mb-0">Starting ₹<%= package.price.toLocaleString("en-IN") %></p>
                </div>
                <div class="col-md-3 icon-box border-end">
                    <h5 class="fw-bold">Hotel</h5>
                    <p class="text-muted mb-0"><%= package.hotel %></p>
                </div>
                <div class="col-md-3 icon-box">
                    <h5 class="fw-bold">Meals</h5>
                    <p class="text-muted mb-0">Breakfast & Dinner</p>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column: Details -->
            <div class="col-lg-8">
                
                <!-- About -->
                <div class="mb-5">
                    <h3 class="fw-bold mb-3">About The Trip</h3>
                    <p class="text-muted"><%= package.description %></p>
                </div>

                <!-- Inclusions/Exclusions -->
                <div class="row mb-5">
                    <div class="col-md-6 mb-md-0" style="width: max-content; height: max-content;">
                        <div class="card bg-light border-0 p-3">
                            <h5 class="fw-bold text-success mb-3">Inclusions</h5>
                            <ul class="list-unstyled amenities-list">
                                <li><span class="check-icon">✓</span> 4 Nights Accommodation</li>
                                <li><span class="check-icon">✓</span> Daily Breakfast & Dinner</li>
                                <li><span class="check-icon">✓</span> Airport Transfers</li>
                                <li><span class="check-icon">✓</span> Sightseeing as per Itinerary</li>
                                <li><span class="check-icon">✓</span> English Speaking Guide</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6" style="width: fit-content; height: fit-content;">
                        <div class="card bg-light border-0 p-3 h-100">
                            <h5 class="fw-bold text-danger mb-3">Exclusions</h5>
                            <ul class="list-unstyled amenities-list">
                                <li><span class="text-danger fw-bold me-2">✗</span> Airfare / Visa</li>
                                <li><span class="text-danger fw-bold me-2">✗</span> Personal Expenses</li>
                                <li><span class="text-danger fw-bold me-2">✗</span> Travel Insurance</li>
                                <li><span class="text-danger fw-bold me-2">✗</span> Anything not mentioned</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Right Column: Booking Card -->
            <div class="col-lg-4">
                <div class="card booking-card p-4" style="display: flex; flex-direction: column; gap: 20px;">
                    <div class="text-center">
                        <p class="text-muted mb-1">Starting From</p>
                        <div class="price-tag"><%= package.price.toLocaleString("en-IN") %> <span class="fs-6 text-muted fw-normal">/ person</span></div>
                    </div>
                    
                    <form style="display: flex; flex-direction: column; gap: 10px;">
                        <div>
                            <label class="form-label text-muted">Travel Date</label>
                            <input type="date" class="form-control">
                        </div>
                        <div>
                            <label class="form-label text-muted">Number of Guests</label>
                            <input type="number" class="form-control" value="2" min="2">
                        </div>
                        <div>
                            <button type="submit" class="btn btn-book mb-3">Book Now</button>
                        </div>
                        
                    </form>

                    <div class="text-center">
                        <p class="small text-muted">Need Help?</p>
                        <h5 class="small text-muted">+91 98765 43210</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>