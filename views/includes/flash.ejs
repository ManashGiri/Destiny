<% if(success && success.length) { %>
    <div class="alert alert-light alert-dismissible fade show col-12 col-md-6 mt-5" role="alert" style="
    position: absolute;
    top: 70px; z-index: 100;">
        <div class="center"><%= success %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } else if(error && error.length) { %>
    <div class="alert alert-dark alert-dismissible fade show col-12 col-md-6 mt-5" role="alert" style="
    padding: 15px 80px;
    width: fit-content;
    border-radius: 10px;
    font-size: 1.2rem;
    z-index: 100;
">
        <div class="center"><%= error %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>