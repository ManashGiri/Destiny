  <style>
    navbar{
      top: 0 !important;
    }
    section {
      margin: 0;
      font-family: "Montserrat", sans-serif;
      background-image: url("images/contact-page/contact-bg.jpg");
      color: white;
    }

    .contact-container {
      background-color: #2e3b8b;
      width: 90%;
      max-width: 500px;
      padding: 40px;
      border: 2px solid #00e1ff;
      box-sizing: border-box;
      text-align: center;
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 10px;
      font-weight: 700;
      text-transform: uppercase;
    }

    p {
      font-size: 0.95rem;
      color: #e0e0e0;
      margin-bottom: 30px;
    }

    .form-group {
      position: relative;
      margin-bottom: 30px;
    }

    .form-group input,
    .form-group textarea {
      width: 100%;
      padding: 10px 5px 10px 5px;
      background: transparent;
      border: none;
      border-bottom: 2px solid #00e1ff;
      color: #00e1ff;
      font-size: 1rem;
      outline: none;
    }

    .form-group input[type="text"],
    .form-group input[type="email"],
    .form-group textarea {
      color: #fff;
    }

    .form-group label {
      position: absolute;
      top: 10px;
      left: 5px;
      color: #00e1ff;
      font-size: 1rem;
      pointer-events: none;
      transition: 0.3s ease;
    }

    .form-group input:focus+label,
    .form-group input:not(:placeholder-shown)+label,
    .form-group textarea:focus+label,
    .form-group textarea:not(:placeholder-shown)+label {
      top: -15px;
      left: 0;
      font-size: 0.85rem;
      color: #00e1ff;
    }

    .form-group textarea {
      resize: vertical;
      min-height: 80px;
    }

    button {
      padding: 12px 30px;
      border: 2px solid #fff;
      background: transparent;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    button:hover {
      background-color: #fff;
      color: #2e3b8b;
    }

    .arrow-icon {
      margin-left: 10px;
      font-size: 0.85rem;
    }

    .contact-photo-image {
      top: 20%;
      height: 70vh;
      width: auto;
    }

    @media (max-width: 500px) {
      .contact-photo-image {
        width: 100% !important;
      }

      .about-photo img {
        display: none;
      }

      .contact-container {
        width: 100%;
      }
    }
  </style>
</head>

