  <section class="container-fluid margin padding">
    <div class="container d-flex justify-content-center align-items-center">
      <div class="contact-container">
        <h2>package</h2>
        <p>Plan the perfect gateway. Define romantic packages</p>
        <% if(curUser && curUser.role =="admin") { %>
          <form action="/package" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text" id="name" name="uploads[title]" required placeholder=" " />
            <label for="name">Enter Title</label>
          </div>
          <div class="form-group">
            <input type="file" id="image" name="uploads[image]" required placeholder=" " />
            <label for="image">Select Image</label>
          </div>
          <div class="form-group">
            <input type="text" id="place" name="uploads[place]" required placeholder=" " />
            <label for="place">Enter City</label>
          </div>
          <div class="form-group">
            <input type="text" id="country" name="uploads[country]" required placeholder=" " />
            <label for="country">Enter Country</label>
          </div>
          <div class="form-group">
            <textarea id="description" name="uploads[description]" required placeholder=" "></textarea>
            <label for="description">Enter Description</label>
          </div>
          <div class="form-group">
             <input type="number" id="price" name="uploads[price]" required placeholder=" " />
            <label for="price">Enter Price</label>
          </div>
          <div class="form-group">
             <input type="text" id="duration" name="uploads[duration]" required placeholder=" " />
            <label for="duration">Enter Duration</label>
          </div>
          <div class="form-group">
             <input type="text" id="hotel" name="uploads[hotel]" required placeholder=" " />
            <label for="hotel">Enter Hotel</label>
          </div>
          <button type="submit">
            Post <span class="arrow-icon">→</span>
          </button>
        </form>
        <% } else { %>
           <form>
          <div class="form-group">
            <input type="text" id="name" required placeholder=" " />
            <label for="name">Your Name</label>
          </div>
          <div class="form-group">
            <input type="email" id="email" required placeholder=" " />
            <label for="email">Your Mail</label>
          </div>
          <div class="form-group">
            <textarea id="message" required placeholder=" "></textarea>
            <label for="message">Your Message</label>
          </div>
          <button type="submit">
            SUBMIT <span class="arrow-icon">→</span>
          </button>
        </form>
        <% } %> 
       
      </div>
    </div>
